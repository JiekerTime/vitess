[Unit]
Description=mysqlctld Service
Documentation=https://vitess.io/docs/
After=network.target
[Service]
User=root
Type=simple
Environment=VT_MYSQL_ROOT=/export/servers/mysql
Environment=VTDATAROOT=/export/data/mysql
EnvironmentFile=/vt/config/vttablet/podenv
ExecStart=/vt/config/mysqlctld_start_script.sh
Restart=always
RestartSec=2s
LimitNOFILE=655350
WorkingDirectory=/vt
[Install]
WantedBy=multi-user.target
